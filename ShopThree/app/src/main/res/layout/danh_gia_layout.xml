<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét về sản phẩm"/>

    <RatingBar
        android:id="@+id/rbDanhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:scaleX=".8"
        android:scaleY=".8"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:theme="@style/changeColorStar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputTieudeDanhgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtTieudeDanhgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="50"
            android:hint="Tiêu đề đánh giá"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputNoidungDanhgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtNoidungDanhgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:hint="Nội dung đánh giá"
            android:layout_marginTop="10dp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnDongy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đồng ý"
        android:background="@drawable/custom_background"
        android:layout_marginTop="10dp"/>

</LinearLayout>